// Here is where you can configure Waybar's .jsonc

{
    "height": 30, // Waybar height (to be removed for auto height)
    "width": 1900,
    "spacing": 4, // Gaps between modules (px)
    "modules-left": [
        "custom/vjdlogo",
        "battery",
        // "wlr/taskbar", // disabled by default, unstrike this to enable the taskbar module.
        "mpris",
        "custom/cava"
    ],
    "modules-center": [
        "hyprland/window",
        "clock"
    ],
    "modules-right": [
        "bluetooth",
        "group/sound",
        "group/hardware",
        "network",
        "backlight",
        "tray",
        "hyprland/workspaces",
        "custom/swayncmenu",
        "custom/powermenu"
    ],
    "custom/hardware-wrap": {
        "format": "Û∞™´",
        "tooltip-format": "Hardware"
    },
    "group/hardware": {
	    "orientation": "horizontal",
        "drawer": {
		    "transition-duration": 500,
		    "transition-left-to-right": false
	    },
        "modules": [
            "custom/hardware-wrap",
		    "cpu",
            "custom/seperator",
		    "memory",
            "custom/seperator",
            "disk"
	    ]
    },
    "group/sound": {
	    "orientation": "horizontal",
        "drawer": {
		    "transition-duration": 500,
		    "transition-left-to-right": false
	    },
        "modules": [
            "pulseaudio",
            "pulseaudio/slider"
	    ]
    },
    "custom/vjdlogo": {
        "format": "vjdlogo",
        "tooltip": true,
        "tooltip-format": "Quick Menu (NWG-Drawer)",
        "on-click": "nwg-drawer -mb 150 -ml 350 -mr 350 -mt 150"
    },
    "custom/swayncmenu": {
        "format": "Û∞Çö",
        "tooltip": true,
        "tooltip-format": "Notifications (SwayNC)",
        "on-click": "swaync-client -t -sw"
    },
    "custom/powermenu":{
        "format": "Û∞ê• ",
        "tooltip": true,
        "tooltip-format": "Power Menu (Wlogout)",
        "on-click": "wlogout"
    },
    "hyprland/workspaces": {
        "persistent-workspaces": {
            "*": 5 // 5 workspaces by default on every monitor
        }
    },
    "hyprland/window": {
        "format": "{title}",
        "max-length": 50
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        "spacing": 10,
        "icons": {
           "blueman": "bluetooth"
        }
    },
    "custom/cava": {
        "format": "{}",
        "exec": "~/.config/hypr/scripts/cava.sh",
        "tooltip": false
    },
    "bluetooth": {
    // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
    "format": "Ôäî {status}",
    "format-disabled": "", // an empty format will hide the module
    "format-connected": "Ôäî {num_connections} connected",
    "tooltip-format": "{controller_alias}", 
    "tooltip-format-connected": "{controller_alias}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}"
    },
    "clock": {
        // "timezone": "America/New_York",
        "format": "{:%b %d, %Y - %H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    },
    "cpu": {
        "format": "Ôãõ {usage}%",
        "on-click": "kitty htop",
        "tooltip": true
    },
    "memory": {
        "format": "ÓøÖ {}%",
        "on-click": "kitty htop",
        "tooltip": true
    },
    "disk": {
        "interval": 60,
        "format": "ÔÇ† {percentage_used}%",
        "on-click": "kitty htop",
        "format-tooltip": "{used} used out of {total} on {path} ({percentage_used}%)",
        "path": "/"
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "states": {
            //"good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{ifname} ÓΩÑ",
        "tooltip-format": "{ifname} via {gwaddr} Û±Çá",
        "format-linked": "{ifname} (No IP) ÓΩÑ",
        "format-disconnected": "Disconnected ‚ö†",
        "on-click": "kitty nmtui"
    },
    "mpris": {
        "format": "{player_icon} {dynamic}",
        "format-paused": "{status_icon} <i>{dynamic}</i>",
        "player-icons": {
            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚è∏"
        },
        "max-length": 30
        // "ignored-players": ["firefox"]
    },
    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî",
        "format-bluetooth-muted": "Û∞ùü {icon}Ôäî",
        "format-muted": "Û∞ùü",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 20,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
            "Alacritty"
        ]
    },
    "custom/seperator": {
        "format": "|"
    }
}
